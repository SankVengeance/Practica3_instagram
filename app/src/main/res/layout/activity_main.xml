<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Primer Layout (RelativeLayout) -->
    <RelativeLayout
        android:id="@+id/superior"
        android:layout_width="match_parent"
        android:layout_marginTop="5dpdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Instagram" />



        <ImageButton
            android:id="@+id/imageButton28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:src="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/imageButton28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:src="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/imageButton28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340dp"
            android:src="@android:drawable/btn_star" />

    </RelativeLayout>

    <!-- Segundo Layout (LinearLayout) -->
    <RelativeLayout
        android:id="@+id/historias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/superior"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/historia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/btn_star" />
        <TextView
            android:id="@+id/mystory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_below="@id/historia1"

            android:textSize="10dp"
            android:text="My Story" />

        <ImageButton
            android:id="@+id/historia2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/story1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_below="@id/historia1"
            android:textSize="10dp"
            android:text="candid" />
        <ImageButton
            android:id="@+id/historia3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
        <TextView
            android:id="@+id/story2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_below="@id/historia1"
            android:textSize="10dp"
            android:text="Sprinkles_" />

        <ImageButton
            android:id="@+id/historia4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/story2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_below="@id/historia1"
            android:textSize="10dp"
            android:text="super_santi" />

        <ImageButton
            android:id="@+id/historia5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/story2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="335dp"
            android:layout_below="@id/historia1"
            android:textSize="10dp"
            android:text="jade" />
    </RelativeLayout>

    <!-- Tercer Layout (RelativeLayout) -->
    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/historias">

        <ImageButton
            android:id="@+id/userPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="princess_peace" />
        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360dp"
            android:textSize="30dp"
            android:text="..." />

    </RelativeLayout>

    <!-- Cuarto Layout (LinearLayout) -->

    <LinearLayout
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/insta"

    </LinearLayout>
    <!-- Quinto Layout (RelativeLayout) -->
    <RelativeLayout
        android:id="@+id/coments"
        android:layout_width="match_parent"
        android:layout_below="@id/picture"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
        <ImageButton
            android:id="@+id/coment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
        <ImageButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
        <ImageButton
            android:id="@+id/come"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/like"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:layout_toRightOf="@id/come"
            android:textSize="15dp"
            android:text="Liked by Kyla_kayaks and others" />
        <TextView
            android:id="@+id/story2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liked"
            android:layout_toRightOf="@id/come"
            android:textSize="15dp"
            android:text="Princess_peace Sunday sunshine #weekendvibes" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/come"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />


        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_below="@id/come"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
        <ImageButton
            android:id="@+id/reels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_below="@id/come"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/sabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_below="@id/come"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340dp"
            android:layout_below="@id/come"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />
    </RelativeLayout>

</RelativeLayout>